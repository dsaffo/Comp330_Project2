<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brendan.notetakinghw2.NoteActivity">

    <EditText
        android:id="@+id/noteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Title:"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:singleLine="true" />


    <EditText
        android:id="@+id/noteContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:gravity="top"
        android:hint="Enter your note here"
        android:inputType="textMultiLine"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/noteTitle"
        android:layout_above="@+id/mentions" />

    <TextView
        android:id="@+id/mentions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/topics"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/topics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/identifiers"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/identifiers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/refrences"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/refrences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</android.widget.RelativeLayout>

